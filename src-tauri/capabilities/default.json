{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:read-all",
    "fs:read-files",
    "fs:write-files",
    "fs:read-dirs",
    "fs:allow-mkdir",
    "fs:scope",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME" }, { "path": "$HOME/**" }]
    }
  ]
}
